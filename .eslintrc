{
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 6
  },
  "env": {
    "es6": true
  },
  "rules": {
    "func-call-spacing": [
      "error",
      "always",
      {"allowNewlines": true}
    ],
    "array-bracket-spacing": [
      "error",
      "always",
      {"objectsInArrays": false, "singleValue": false}
    ],
    "comma-spacing": [
      "error",
      {"before": false, "after": true}
    ],
    "semi": ["error", "never"]
  }
}
